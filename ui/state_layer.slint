export component StateLayer inherits TouchArea {
    in property <length> border-radius <=> i-container.border-radius;

    width: 100%;
    height: 100%;

    states [
        pressed when root.pressed : {
            i-container.opacity: 0.12;
        }
    ]

    i-container := Rectangle {
        width: 100%;
        height: 100%;
        background: #fff;
        opacity: 0.0;
    }
}
